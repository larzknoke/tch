generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Effort {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String?
  content   String?
  active    Boolean  @default(false)
  finished  Boolean  @default(false)
  date      String?
  maxWorker Int?
  workers   Worker[]
}

model Article {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  title     String?
  teaser    String?
  slug      String?   @unique
  content   String?
  active    Boolean   @default(false)
  date      DateTime?
}

model Worker {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @map("updated_at")
  email     String?
  name      String?
  phone     String?
  verified  Boolean? @default(false)
  verifyId  String?  @unique @default(cuid())
  effortId  Int?
  effort    Effort?  @relation(fields: [effortId], references: [id])
}

model Newsletter {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @map("updated_at")
  email     String?
  verified  Boolean? @default(false)
  verifyId  String?  @unique @default(cuid())
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  password      String?
  accounts      Account[]
  sessions      Session[]
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

model MemberRegistration {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Pers√∂nliche Daten
  vorname      String
  name         String
  strasse      String
  plz          String
  ort          String
  email        String
  telefon      String?
  geburtsdatum String

  // Mitgliedschaft
  mitgliedsart String
  status       String

  // SEPA-Lastschriftmandat
  sepaVorname           String  @map("sepa_vorname")
  sepaName              String  @map("sepa_name")
  sepaStrasse           String  @map("sepa_strasse")
  sepaPlz               String  @map("sepa_plz")
  sepaOrt               String  @map("sepa_ort")
  sepaKreditinstitut    String  @map("sepa_kreditinstitut")
  sepaIban              String  @map("sepa_iban")
  sepaEinzug            String  @map("sepa_einzug")
  sepaLastschriftmandat Boolean @default(false) @map("sepa_lastschriftmandat")

  // Zustimmungen
  datenschutz Boolean @default(false)

  // Status
  verified  Boolean @default(false)
  verifyId  String? @unique @default(cuid())
  processed Boolean @default(false)
  notes     String?

  @@map("member_registrations")
}
